config("force_include_std") {
  if (is_winrt) {
    cflags_c = [
      "/FIwinrt_compat_std.h"
    ]
    cflags = [
      "/FIwinrt_compat_std.h"
    ]
  }
}

config("force_include_win") {
  if (is_winrt) {
    cflags_c = [
      "/FIwinrt_compat_win.h"
    ]
    cflags = [
      "/FIwinrt_compat_win.h"
    ]
  }
}

config("ignore_threading_model_warning") {
  if (is_winrt) {
    cflags_c = [
      "/wd4447"
    ]
    cflags = [
      "/wd4447"
    ]
  }
}

config("winrt_config") {
  if (is_winrt) {
    include_dirs = [ "." ]
  }
}

static_library("winrt_compat") {
  if (is_winrt) {
    sources = [
      "winrt_compat_std.cc",
      "winrt_compat_win.cc",
    ]

    public_configs = [ ":winrt_config" ]

    include_dirs = [ "./" ]
  } else {
    sources = []
  }
  sources += [ "winrt_compat_noop.cc" ]
}
